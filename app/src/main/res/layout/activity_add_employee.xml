<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New.AddEmployeeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="0dp"
            android:backgroundTint="@color/colorPrimaryRed">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotation="180"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMPLOYEE"
                    android:textSize="18dp"
                    android:layout_toRightOf="@+id/imgBack"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white">


                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/card"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toRightOf="@id/flagIcon"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/grey_radi_background"
                >



                <Spinner
                    android:id="@+id/spinEmployeeRole"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    />


                <!--
                                <EditText

                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content"
                                    android:hint="Employee Role"
                                    android:layout_margin="12dp"
                                    android:padding="8dp"
                                    android:textSize="16dp"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    >


                                </EditText>
                -->


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toRightOf="@id/flagIcon"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/grey_radi_background"
                >


                <EditText
                    android:id="@+id/edtEmployeeName"
                    android:padding="8dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:hint="Employee Name"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"

                    >


                </EditText>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toRightOf="@id/flagIcon"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/grey_radi_background"
                >


                <EditText
                    android:id="@+id/edtPhoneNumber"
                    android:padding="8dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:maxLength="10"
                    android:inputType="number"
                    android:digits="0123456789ÁáÂâÃãÀàÇçÉéÊêÍíÓóÔôÕõÚú"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"

                    >


                </EditText>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toRightOf="@id/flagIcon"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/grey_radi_background"
                >


                <EditText
                    android:id="@+id/edtEmail"
                    android:padding="8dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:hint="E-mail id"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"

                    >


                </EditText>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toRightOf="@id/flagIcon"

                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/grey_radi_background"
                >


                <EditText
                    android:id="@+id/edtJoiningDate"
                    android:padding="8dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:hint="Joining Date"
                    android:focusable="false"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"

                    >


                </EditText>


            </RelativeLayout>


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Save Details"
                android:fontFamily="@font/archivo_black"
                android:textSize="16dp"
                android:backgroundTint="@color/colorPrimaryRed"
                app:cornerRadius="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="18dp"
                android:id="@+id/btnSaveDetails"
                >


            </com.google.android.material.button.MaterialButton>




        </LinearLayout>





    </RelativeLayout>

</RelativeLayout>