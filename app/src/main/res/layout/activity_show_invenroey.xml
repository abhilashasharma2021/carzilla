<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New.ShowInvenroeyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="0dp"
            android:backgroundTint="#022F40">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotation="180"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back"></ImageView>


                <ImageView
                    android:id="@+id/imgAdd"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotation="180"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_plus">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INVENTORY"
                    android:textStyle="bold"

                    android:textSize="18dp"
                    android:layout_toRightOf="@+id/imgBack"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white">


                </TextView>

                <TextView
                    android:id="@+id/txtAddSparePart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ SPARE PARTS"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ancient_blue_radi_background"
                    android:layout_alignParentRight="true"
                    android:padding="7dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#E41D1D"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/card"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="3"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSparePart"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#E48668"
                android:layout_height="100dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/inventory"
                        android:foregroundGravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:layout_height="55dp">

                    </ImageView>

                    <TextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPARE PARTS"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp">

                    </TextView>


                    <TextView
                        android:id="@+id/txtSparePArtCount"
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="238"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp">

                    </TextView>


                </LinearLayout>







            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardInStockprice"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#76CA79"
                android:layout_margin="5dp"
                android:layout_height="100dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/img_stock"
                        android:foregroundGravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:layout_height="55dp"
                        app:tint="@color/white">

                    </ImageView>

                    <TextView
                        android:textSize="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IN STOCK"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp">

                    </TextView>


                    <TextView
                        android:id="@+id/txtInStockPrice"
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp">

                    </TextView>


                </LinearLayout>







            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryRed"
                android:layout_margin="5dp"
                android:layout_height="100dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/img_vendor"
                        android:foregroundGravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:tint="@color/white"
                        android:layout_height="55dp">

                    </ImageView>

                    <TextView
                        android:textSize="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VENDOR DUE"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp">

                    </TextView>


                    <TextView
                        android:textSize="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp">

                    </TextView>


                </LinearLayout>






            </androidx.cardview.widget.CardView>




        </LinearLayout>





    </RelativeLayout>

</RelativeLayout>