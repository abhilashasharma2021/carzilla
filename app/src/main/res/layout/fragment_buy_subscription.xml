<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BuySubscriptionFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="0dp"
        android:backgroundTint="#022F40">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:rotation="180"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"></ImageView>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingLeft="15dp"
                android:layout_toLeftOf="@+id/imgcar"
                android:text="BUY SUBSCRIPTION"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imgBack"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff">
            </TextView>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_below="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:outlineSpotShadowColor="@color/black"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="BUY NOW"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/archivo_black"
                    >


                </TextView>


                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fatehali Asamadi"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryOne">


                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ITEM"
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="@color/grey">


                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sayaaraa Pacage "
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black">

                </TextView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="AMOUNT PAYABLE">

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs 1999.0"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/colorPrimaryRed">


                </TextView>
            </LinearLayout>




            <com.google.android.material.card.MaterialCardView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/white"
                    android:src="@drawable/logo">

                </ImageView>

            </com.google.android.material.card.MaterialCardView>




        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAYMENT DETAILS"
            android:textColor="@color/black">

        </TextView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textColor="@color/black"
                >

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Optional)"
                android:layout_marginLeft="8dp">

            </TextView>




        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/grey_radi_background">


        </EditText>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Address"
                android:textColor="@color/black"
                >

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Optional)"
                android:layout_marginLeft="8dp">

            </TextView>




        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/grey_radi_background">


        </EditText>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No"
                android:textColor="@color/black"
                >

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Optional)"
                android:layout_marginLeft="8dp">

            </TextView>




        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/grey_radi_background">


        </EditText>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                >

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Optional)"
                android:layout_marginLeft="8dp">

            </TextView>






        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/grey_radi_background">


        </EditText>



        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="BUY NOW"
            android:textSize="15sp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#022F40"
            android:fontFamily="@font/archivo_black">

        </com.google.android.material.button.MaterialButton>





    </LinearLayout>





    </LinearLayout>
    </ScrollView>
</RelativeLayout>