<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New.ShowRepairTagActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="0dp"
        android:backgroundTint="#022F40">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:rotation="180"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"></ImageView>


            <!--
                            <ImageView
                                android:id="@+id/imgAdd"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:rotation="180"
                                android:padding="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/img_plus">

                            </ImageView>
            -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingLeft="15dp"
                android:layout_toLeftOf="@+id/imgcar"
                android:text="Repair Tag"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imgBack"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff">
            </TextView>
            <ImageView
                android:id="@+id/imgcar"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_car"></ImageView>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/card"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="#0D000000"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp">





            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="55dp">


                <RelativeLayout
                    android:id="@+id/relImage"
                    android:layout_width="30dp"
                    android:background="@drawable/circular"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="#DC867F"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp">


                    <ImageView
                        android:id="@+id/imgprofile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerInParent="true"
                        app:tint="#ffffff" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Body and Paint Master"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/relImage"
                   />





                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#57000000"/>


            </RelativeLayout>





        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp">





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">


                <RelativeLayout
                    android:id="@+id/relImage1"
                    android:layout_width="30dp"
                    android:background="@drawable/circular"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="#8D9A10"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerInParent="true"
                        app:tint="#ffffff" />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Insurance Work"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/relImage1"
                    />





                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#57000000"/>


            </RelativeLayout>





        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp">





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">


                <RelativeLayout
                    android:id="@+id/relImage2"
                    android:layout_width="30dp"
                    android:background="@drawable/circular"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="#46C4D5"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerInParent="true"
                        app:tint="#ffffff" />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Regular Service"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/relImage2"
                    />





                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#57000000"/>


            </RelativeLayout>





        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp">





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">


                <RelativeLayout
                    android:id="@+id/relImage3"
                    android:layout_width="30dp"
                    android:background="@drawable/circular"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="#9C27B0"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerInParent="true"
                        app:tint="#ffffff" />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vas"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/relImage3"
                    />





                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#57000000"/>


            </RelativeLayout>





        </androidx.cardview.widget.CardView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="12dp"
            android:backgroundTint="@color/colorPrimaryRed"
            android:fontFamily="@font/archivo_black"
            android:padding="12dp"
            android:text="Repair Tag"
            android:textSize="16dp"
            app:cornerRadius="12dp">


        </com.google.android.material.button.MaterialButton>



    </LinearLayout>



</RelativeLayout>