<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/card"
        android:orientation="vertical"
        android:background="#0D000000"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMaster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <RelativeLayout
                android:id="@+id/relative"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/relImage"
                    android:layout_width="40dp"
                    android:background="@drawable/rel_backgotund"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="40dp">


                    <TextView
                        android:id="@+id/txtAlphabate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="A"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A/C air duct and vent"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/relImage"
                    />

                <ImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_edit"
                    app:tint="#6F000000" />


                <RelativeLayout
                    android:id="@+id/relrack"
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/txtName"
                    android:layout_toRightOf="@+id/relImage"
                    android:layout_marginLeft="10dp"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/txtRack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rack"
                        android:textSize="13dp"
                        android:layout_alignParentRight="true"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:textColor="#40000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:padding="2dp"
                        />

                </RelativeLayout>




                <LinearLayout
                    android:id="@+id/linear"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"

                    android:layout_below="@+id/txtName"
                    android:layout_toRightOf="@+id/relrack"
                    android:layout_height="wrap_content">



                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edtStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:background="@color/white"
                            android:hint="0"
                            android:focusable="false"
                            android:padding="3dp"
                            android:textColor="@color/black"

                            android:textColorHint="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Stock"
                            android:textSize="10dp"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:textColor="#40000000"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            />



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="65dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edtPurchase"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:hint="0"
                            android:padding="3dp"
                            android:textSize="12dp"
                            android:focusable="false"


                            android:layout_centerHorizontal="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/txt1"
                            android:background="@color/white"
                            />

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Purchase"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:textSize="10dp"

                            android:textColor="#40000000"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            />



                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edtPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:hint="0"
                            android:padding="3dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:layout_marginLeft="5dp"
                            android:textSize="12dp"
                            android:focusable="false"

                            android:layout_below="@+id/txt2"
                            android:background="@color/white"
                            />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="10dp"

                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:textColor="#40000000"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            />



                    </RelativeLayout>

                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/linear"
                    android:background="#57000000"/>


            </RelativeLayout>





        </androidx.cardview.widget.CardView>






    </LinearLayout>

</RelativeLayout>