            -->

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="14dp"
                android:hint="Search Service"
                android:paddingLeft="15dp"
                android:layout_toLeftOf="@+id/btnService"
                android:layout_toRightOf="@+id/imgBack"
                android:layout_centerVertical="true"
                android:background="@drawable/grey_radi_background"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:textColorHint="#5C000000"
                android:backgroundTint="#ffffff"
                android:textColor="#5C000000">
            </EditText>
            <Button
                android:id="@+id/btnService"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="#C61A1A"
                android:backgroundTint="#C61A1A"
                android:text="Service"
               ></Button>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
