<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New.ShowCounterSaleActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="0dp"
            android:backgroundTint="#022F40">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotation="180"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back"></ImageView>


                <ImageView
                    android:id="@+id/imgAdd"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotation="180"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_plus">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Counter SALE"
                    android:textStyle="bold"

                    android:textSize="18dp"
                    android:layout_toRightOf="@+id/imgBack"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white">


                </TextView>

                <TextView
                    android:id="@+id/txtPurchaseOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Counter Sale"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ancient_blue_radi_background"
                    android:layout_alignParentRight="true"
                    android:padding="7dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#E41D1D"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/card"
            android:orientation="vertical"
            android:background="#0D000000"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgprofile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/calendar_blue"
                        app:tint="#022F40" />


                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="15dp"
                        android:textColor="#40000000"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/imgprofile"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/txtName"
                        android:id="@+id/txtComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="06 Apr 2021"
                        android:layout_marginRight="70dp"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/imgprofile"
                        android:padding="2dp"
                        />




                </RelativeLayout>





            </androidx.cardview.widget.CardView>






        </LinearLayout>





    </RelativeLayout>

</RelativeLayout>