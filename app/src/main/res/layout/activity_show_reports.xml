<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New.ShowReportsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="0dp"
            android:backgroundTint="@color/colorPrimaryRed">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotation="180"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back"></ImageView>


                <!--
                                <ImageView
                                    android:id="@+id/imgAdd"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:rotation="180"
                                    android:padding="10dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/img_plus">

                                </ImageView>
                -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reports"
                    android:textSize="18dp"
                    android:layout_toRightOf="@+id/imgBack"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white">


                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/card"
            android:orientation="vertical"
            android:background="#0D000000"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/relImage"
                        android:layout_width="30dp"
                        android:background="@drawable/circular"
                        android:layout_marginLeft="15dp"
                        android:backgroundTint="#DC867F"
                        android:layout_height="30dp">


                        <ImageView
                            android:id="@+id/imgprofile"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_search"
                            app:tint="#ffffff" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Income | Expense"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/txtName"
                        android:id="@+id/txtComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total income | Total Expense Reports "
                        android:layout_marginRight="70dp"
                        android:textSize="13dp"
                        android:singleLine="true"
                        android:textColor="#86000000"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage"
                        android:padding="2dp"
                        />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txtComment"
                        android:background="#57000000"/>


                </RelativeLayout>





            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/relImage1"
                        android:layout_width="30dp"
                        android:background="@drawable/circular"
                        android:layout_marginLeft="15dp"
                        android:backgroundTint="#8D9A10"

                        android:layout_height="30dp">


                        <ImageView
                            android:id="@+id/imgprofile1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_search"
                            app:tint="#ffffff" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txtName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sales | Purchase"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage1"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/txtName1"
                        android:id="@+id/txtComment1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stock in | Stock out Report  "
                        android:layout_marginRight="70dp"
                        android:textSize="13dp"
                        android:singleLine="true"

                        android:textColor="#86000000"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage1"
                        android:padding="2dp"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txtComment1"
                        android:background="#57000000"/>

                </RelativeLayout>





            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardCheckin"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">





                <RelativeLayout
                    android:id="@+id/relative2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/relImage2"
                        android:layout_width="30dp"
                        android:background="@drawable/circular"
                        android:layout_marginLeft="15dp"
                        android:backgroundTint="#46C4D5"

                        android:layout_height="30dp">


                        <ImageView
                            android:id="@+id/imgprofile2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_search"
                            app:tint="#ffffff" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txtName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service | Parts "
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage2"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/txtName2"
                        android:id="@+id/txtComment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Service | Parts wise Report "
                        android:layout_marginRight="70dp"
                        android:textSize="13dp"
                        android:textColor="#86000000"
                        android:singleLine="true"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage2"
                        android:padding="2dp"
                        />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txtComment2"
                        android:background="#57000000"/>
                </RelativeLayout>





            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <RelativeLayout
                    android:id="@+id/relative3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/relImage3"
                        android:layout_width="30dp"
                        android:background="@drawable/circular"
                        android:layout_marginLeft="15dp"
                        android:backgroundTint="#9C27B0"

                        android:layout_height="30dp">


                        <ImageView
                            android:id="@+id/imgprofile3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_search"
                            app:tint="#ffffff" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txtName3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inventory"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage3"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/txtName3"
                        android:id="@+id/txtComment3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Total in stock Spare Perts Report"
                        android:layout_marginRight="70dp"
                        android:textSize="13dp"
                        android:textColor="#86000000"
                        android:singleLine="true"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage3"
                        android:padding="2dp"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txtComment3"
                        android:background="#57000000"/>

                </RelativeLayout>





            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cerdRepair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <RelativeLayout
                    android:id="@+id/relative4"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/relImage4"
                        android:layout_width="30dp"
                        android:background="@drawable/circular"
                        android:layout_marginLeft="15dp"
                        android:backgroundTint="#A99C27B0"

                        android:layout_height="30dp">


                        <ImageView
                            android:id="@+id/imgprofile4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_search"
                            app:tint="#ffffff" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txtName4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Wise"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage4"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_below="@+id/txtName4"
                        android:id="@+id/txtComment4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee wise job and salary Reports"
                        android:layout_marginRight="70dp"
                        android:textSize="13dp"
                        android:textColor="#86000000"
                        android:singleLine="true"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/relImage4"
                        android:padding="2dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txtComment4"
                        android:background="#57000000"/>


                </RelativeLayout>





            </androidx.cardview.widget.CardView>

        </LinearLayout>





    </RelativeLayout>

</RelativeLayout>